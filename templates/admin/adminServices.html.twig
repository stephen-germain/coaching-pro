{% extends 'baseAdmin.html.twig' %}

{% block title %}Les services{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-2">

                <h1 class="pt-5 text-center">Les services</h1>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Services</th>
                            <th>Tarifs</th>
                            <th>Durée</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for service in services %}
                        <tr>
                            <td>{{ service.activity}}</td>
                            <td>{{ service.price }} €</td>
                            <td>{{ service.time }} min</td>
                            <td>
                                <a href="{{ path('service_update', {'id':service.id}) }}">Modifier</a>
                                <a href="{{ path('service_delete', {'id':service.id}) }}">Supprimer</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('create_service') }}">Ajouter un service</a>
            </div>
        </div>
    </div>
{% endblock %}
