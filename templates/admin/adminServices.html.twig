{% extends 'baseAdmin.html.twig' %}

{% block title %}Les services{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-2 m-auto">

                <h1 class="py-4 text-center">Les services</h1>
                <div class="row">
                    <div class="col-4 col-md-2 text-center">
                        <h4>Services</h4>
                    </div>
                    <div class="col-4 col-md-4 text-center">
                        <h4>Tarifs</h4>
                    </div>
                    <div class="col-4 col-md-2 text-center">
                        <h4>Durée</h4>
                    </div>
                </div>
                <hr>

                {% for service in services %}
                    <div class="row">
                        <div class="col-4 col-md-2 text-center">
                            <p>{{ service.activity}}</p>
                        </div>
                        <div class="col-4 col-md-4 text-center">
                            <p class="overflow-auto">{{ service.price }} €</p>
                        </div>
                        <div class="col-4 col-md-2 text-center">
                            <p>{{ service.time }} min</p>
                        </div>
                        <div class="col-12 col-md-4 text-center">
                            <a class="linkAdmin" href="{{ path('service_update', {'id':service.id}) }}">
                                <button type="button" class="btn btn-success">
                                    Modifier
                                </button>
                            </a>
                            <a href="{{ path('admin_user_delete', {'id': service.id}) }}" onclick="return confirm('Voulez-vous supprimer ce service?')">
                                <button type="button" class="btn btn-success">
                                    Supprimer
                                </button>
                            </a>
                        </div>
                    </div>
                    <hr>
                {% endfor %}
                <a class="linkModal" href="{{ path('create_service') }}"><button type="button" class="btn btn-success mb-5">Ajouter un service</button></a>
            </div>
        </div>
    </div>
{% endblock %}
