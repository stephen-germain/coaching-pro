{% extends 'baseAdmin.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-2">

                <h1 class="pt-5 text-center">Liste des utilisateurs</h1>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Prénom</th>
                            <th>Email</th>
                            <th>Rôle</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.name}}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.roles|join(' + ')|lower}}</td>
                            <td>
                                <a href="{{ path('admin_user_update', {'id':user.id}) }}">Modifier</a>
                                <a href="{{ path('admin_user_delete', {'id':user.id}) }}">Supprimer</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
