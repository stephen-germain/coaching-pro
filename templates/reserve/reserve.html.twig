{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

    {% block body %}
    
        {# -----------------------
        ------ PRESENTATION ------
        ----------------------- #}

        <section id="presentation" class="container-fluid"> 
            <div class="row">
                <div class="col-md-12 text-center">
                    <div class="heading animate__animated animate__zoomIn">
                        <h1>stephen</h1>
                        <h2>coach sportif</h2>
                    </div>
                </div>
            </div>
        </section>
       
        {# ----------------
        ------ ABOUT ------
        ---------------- #}

        <section id="reservation" class="headband container-fluid">
             <div class="col-md-12 text-center bg-success text-white">
                <div class="size-headband animate__animated animate__fadeInUp">
                    <h4 class="pb-2">Les services</h4>
                    <div class="divider"></div>
                    <p class="p-3"> diplômés et ayant une carte professionnelle de coach sportif. formation PSC1 (Prévention et secours civique niveau 1)</p>
                    <a href="#" class="bouton1">en savoir plus sur moi</a>
                </div>
            </div> 
        </section>
        <section id="booking-services">
            <div class="container">
                {% for service in services %}
                    <div class="row">
                        <div class="col-12 col-md-4 text-center py-3">{{service.activity}}</div>
                        <div class="col-12 col-md-4 text-center py-3">{{service.price}} €</div>
                        <div class="col-12 col-md-4 text-center py-3">{{service.time}} min</div>
                    </div>
                    <hr>
                {% endfor %}
                 <div class="row">
                     <div class="col-12 text-center py-3">
                        <a href="{{ path('booking_calendar') }}">
                            <button type="button" class="btn btn-dark">
                                Réserver
                            </button>
                        </a>
                    </div>
                </div>
            </div>  
        </section>
    {% endblock %}

